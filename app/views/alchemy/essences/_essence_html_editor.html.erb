<% cache(content) do %>
<div class="content_editor essence_html_editor" data-content-id="<%= content.id %>">
  <%= label_and_remove_link(content) %>
  <%= text_area_tag(
    content.form_field_name,
    content.ingredient
      ) %>
  <%= render 'alchemy/essences/shared/locale_links', content: content %>
  <br>
  <%= render 'alchemy/essences/shared/translate_essence_selector', content: content %>
</div>
<% end %>
